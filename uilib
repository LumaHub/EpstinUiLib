        task.wait(0.4)
        InfoFrame.Visible = false
        MainFrame.Visible = true
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        Tween(MainFrame, {Size = UDim2.new(0, 550, 0, 400)}, 0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
